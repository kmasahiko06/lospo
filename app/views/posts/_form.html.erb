<% if @post.errors.any? %>
    <big><%= @post.errors.full_messages %>
    </big>
    <br><br>
<% end %>
<%= form_for @post do |f| %>
    <div>
        <%= f.label :bosyuu, "募集形式：" %>
         <%= f.select :bosyuu, Post.bosyuus.keys.to_a %>
    </div><br>
    <div>
        <%= f.label :prefecture, "都道府県：" %>

         <%= f.select :prefecture, Post.prefectures.keys.to_a %>
   </div><br>
   <div>
       <%= f.label :spo_cate, "スポーツ：" %>
        <%= f.select :spo_cate, Post.spo_cates.keys.to_a %>
  </div><br>
      <%= f.label :title, "タイトル：" %>
     <%= f.text_field :title,:size => "69" %><br> <br>
     <div class="field">
       <%= f.label :image, "画像："%>
       <% if @post.image? %>
        <%#= f.label :remove_image, "Remove" %>
        <%#= f.check_box :remove_image %>
         <%#= image_tag @post.image_url(:thumb).to_s %>
         <%= f.hidden_field :image_cache if @post.image_cache %>
       <% end %>
       <%= f.file_field :image %>
     </div><br>
     <div>
         <%= f.label :text, "本文：" %><br>
         <%= f.text_area :text ,:size => "80x40",  placeholder: 'ご自由に書いてください(例：活動、方針、スケジュール、経費、ウェブサイト、連絡先etc.)' %>
     </div><br>

      <div class="actions">
        <%= f.submit "投稿する"%>
      </div>
      <% end %>
